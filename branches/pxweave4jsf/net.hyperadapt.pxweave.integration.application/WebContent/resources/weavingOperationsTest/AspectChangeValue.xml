<?xml version="1.0" encoding="UTF-8" ?>
<aspect name="aspectChangeValue"
	xsi:schemaLocation="http://www.hyperadapt.net/pxweave/aspects ../schemas/aspectE2.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.hyperadapt.net/pxweave/aspects">
	<interface>
		<core id="core" type="http://www.w3.org/1999/xhtml" />
	</interface>
	<adviceGroup>
		<depends evaluationMode="expression">
			<boolExpr>"${language}" = "en"</boolExpr>
			<sparql>SELECT ?language WHERE {&lt;http://mmt.inf.tu-dresden.de/crocoon/Setting#${sessionId}&gt; &lt;http://mmt.inf.tu-dresden.de/crocoon/context-person.owl#language&gt; ?language . Filter (?language = 'en')}</sparql>
		</depends>
		<scope>
			<xpath>/</xpath>
			<joinpoint locator="before" name="PreProcessing"/>
		</scope>
		<advices>
			<changeValue>
				<pointcut>h:outputText[@id='popularTitle']/attribute::value</pointcut>
				<value>
					<textTemplate>"Popular"</textTemplate>
				</value>
			</changeValue>
		</advices>
	</adviceGroup>
</aspect>
