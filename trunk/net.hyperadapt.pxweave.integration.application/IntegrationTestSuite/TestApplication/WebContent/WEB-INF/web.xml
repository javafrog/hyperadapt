<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
                             http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
	     id="WebApp_ID" version="2.5">
 
	<welcome-file-list>
    	<welcome-file>
     		index.jsp
    	</welcome-file>
  	</welcome-file-list>
  
	<servlet>
		<servlet-name>project</servlet-name>
  	  	<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
  	  	<load-on-startup>1</load-on-startup>
  	</servlet>

	<servlet-mapping>
		<servlet-name>project</servlet-name>
	    <url-pattern>*.html</url-pattern>
	</servlet-mapping>
  
	<!-- Initialisierung des PXWeaveFilters -->
	<filter>
		<filter-name>PostProcessingFilter</filter-name>
		<filter-class>net.hyperadapt.pxweave.integration.generic.PostProcessingFilter</filter-class>
		<init-param>
	        <param-name>pattern</param-name>
	        <param-value>/jsfpxweave/[^/]*</param-value>
	        <description>allow only the xhtml sites and exclude resources</description>
	    </init-param>		
	</filter>
	<filter-mapping>
		<filter-name>PostProcessingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- Ende Initialisierung des PXWeaveFilters -->
</web-app>